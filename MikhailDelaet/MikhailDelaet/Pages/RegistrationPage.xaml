<Page x:Class="MikhailDelaet.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MikhailDelaet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Text="OOO `Михаил делает`"/>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="350">
            <TextBlock Text="Login"/>
            <TextBox Text="{Binding Login}"/>
            <TextBlock Text="Password"/>
            <TextBox Text="{Binding Password}"/>
            <ComboBox x:Name="CBRole"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding Role}"/>
            <Button x:Name="BRegistration" Content="Register" Click="BRegistration_Click"/>
            <Button x:Name="BBack" Content="back" Click="BBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
