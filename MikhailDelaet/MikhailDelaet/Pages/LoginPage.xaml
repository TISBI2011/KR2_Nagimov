<Page x:Class="MikhailDelaet.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MikhailDelaet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Text="OOO `Михаил делает`"/>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="350">
            

            <TextBlock Text="Login"/>
            <TextBox x:Name="TBLogin"/>
            <TextBlock Text="Password"/>
            <TextBox x:Name="TBPassword"/>
            <Button x:Name="BLogin" Content="Login" Click="BLogin_Click"/>
            <Button x:Name="BRegistration" Content="GOTO REG PAGE" Click="BRegistration_Click"/>
        </StackPanel>
    </Grid>
</Page>
